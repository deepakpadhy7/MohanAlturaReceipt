<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E0E0E0">

    <!-- Toolbar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/primary_green"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="8dp"
        android:paddingEnd="16dp">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@android:drawable/ic_menu_revert"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:tint="@color/white" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Receipt Preview"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginStart="8dp" />

        <ImageButton
            android:id="@+id/btnShare"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@android:drawable/ic_menu_share"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:tint="@color/white"
            android:layout_marginEnd="4dp" />

        <ImageButton
            android:id="@+id/btnSave"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@android:drawable/ic_menu_save"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:tint="@color/white" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp">

        <!-- Receipt View (this gets captured as bitmap) -->
        <LinearLayout
            android:id="@+id/receiptContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:elevation="4dp"
            android:padding="20dp">

            <!-- Header Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="4dp">

                <!-- Logo Area -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <!-- Logo circle -->
                    <LinearLayout
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/circle_border_green"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mohan"
                            android:textColor="@color/primary_green"
                            android:textSize="10sp"
                            android:textStyle="italic" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Altura"
                            android:textColor="@color/primary_green"
                            android:textSize="16sp"
                            android:textStyle="bold|italic" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Right Side - Date and Association Info -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:orientation="vertical"
                    android:gravity="end">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="4dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="DATE : "
                            android:textColor="@color/dark_gray"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/tvReceiptDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="__/__/____"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MOHAN ALTURA ASSOCIATION"
                        android:textColor="@color/black"
                        android:textSize="11sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Address : Gunjur Palya Road,"
                        android:textColor="@color/dark_gray"
                        android:textSize="9sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gunjur Village, Bangalore,"
                        android:textColor="@color/dark_gray"
                        android:textSize="9sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Karnataka - 560087"
                        android:textColor="@color/dark_gray"
                        android:textSize="9sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/dark_gray"
                android:layout_marginBottom="8dp" />

            <!-- Receipt Title -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MAINTENANCE PAYMENT RECEIPT"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="12dp" />

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/dark_gray"
                android:layout_marginBottom="12dp" />

            <!-- Received With Thanks -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RECEIVED WITH THANKS FROM"
                android:textColor="@color/dark_gray"
                android:textSize="10sp"
                android:letterSpacing="0.05"
                android:layout_marginBottom="4dp" />

            <!-- Name Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="4dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NAME :  "
                    android:textColor="@color/dark_gray"
                    android:textSize="11sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="___________________________"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:paddingBottom="2dp"
                    android:background="@drawable/bottom_border" />
            </LinearLayout>

            <!-- Flat No and Wing Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="4dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FLAT NO :  "
                    android:textColor="@color/dark_gray"
                    android:textSize="11sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvFlatNo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="______"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:paddingBottom="2dp"
                    android:background="@drawable/bottom_border" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="    WING :  "
                    android:textColor="@color/dark_gray"
                    android:textSize="11sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvWing"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="______"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:paddingBottom="2dp"
                    android:background="@drawable/bottom_border" />
            </LinearLayout>

            <!-- Month Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="4dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FOR THE MONTH OF :  "
                    android:textColor="@color/dark_gray"
                    android:textSize="11sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvMonth"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="___________________________"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:paddingBottom="2dp"
                    android:background="@drawable/bottom_border" />
            </LinearLayout>

            <!-- Payment Mode Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="4dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MODE OF PAYMENT :  "
                    android:textColor="@color/dark_gray"
                    android:textSize="11sp"
                    android:textStyle="bold" />

                <!-- Checkboxes for payment mode -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <View
                        android:id="@+id/checkCash"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:background="@drawable/checkbox_unchecked"
                        android:layout_marginEnd="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CASH"
                        android:textColor="@color/dark_gray"
                        android:textSize="10sp"
                        android:layout_marginEnd="12dp" />

                    <View
                        android:id="@+id/checkUPI"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:background="@drawable/checkbox_unchecked"
                        android:layout_marginEnd="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="UPI"
                        android:textColor="@color/dark_gray"
                        android:textSize="10sp"
                        android:layout_marginEnd="12dp" />

                    <View
                        android:id="@+id/checkNetBanking"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:background="@drawable/checkbox_unchecked"
                        android:layout_marginEnd="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NET BANKING"
                        android:textColor="@color/dark_gray"
                        android:textSize="10sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Amount in words Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AMOUNT (in words) :  "
                    android:textColor="@color/dark_gray"
                    android:textSize="11sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvAmountWords"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="___________________________"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:paddingBottom="2dp"
                    android:background="@drawable/bottom_border" />
            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/receipt_border"
                android:layout_marginBottom="12dp" />

            <!-- Received By and Amount Box Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RECEIVED BY :  "
                    android:textColor="@color/dark_gray"
                    android:textSize="11sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvReceivedBy"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="____________"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:paddingBottom="2dp"
                    android:background="@drawable/bottom_border" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="16dp"
                    android:background="@drawable/amount_box"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â‚¹"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginEnd="4dp" />

                    <TextView
                        android:id="@+id/tvAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="____/-"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:minWidth="60dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Signatures Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <!-- Signature line -->
                    <View
                        android:layout_width="120dp"
                        android:layout_height="1dp"
                        android:background="@color/dark_gray"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PAYER SIGNATURE"
                        android:textColor="@color/dark_gray"
                        android:textSize="9sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <!-- Authorized Signature -->
                    <TextView
                        android:id="@+id/tvAuthSignature"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="13sp"
                        android:textStyle="italic"
                        android:layout_marginBottom="2dp" />

                    <!-- Signature line -->
                    <View
                        android:layout_width="120dp"
                        android:layout_height="1dp"
                        android:background="@color/dark_gray"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="AUTHORIZED SIGNATURE"
                        android:textColor="@color/dark_gray"
                        android:textSize="9sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <!-- Receipt No at bottom -->
            <TextView
                android:id="@+id/tvReceiptNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/medium_gray"
                android:textSize="9sp"
                android:layout_gravity="end" />

        </LinearLayout>
    </ScrollView>

    <!-- Bottom Action Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:padding="12dp"
        android:elevation="8dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSavePdf"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Save PDF"
            android:textSize="14sp"
            android:layout_marginEnd="8dp"
            app:backgroundTint="@color/primary_green"
            app:cornerRadius="8dp"
            xmlns:app="http://schemas.android.com/apk/res-auto" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnShareReceipt"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Share"
            android:textSize="14sp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            app:strokeColor="@color/primary_green"
            app:cornerRadius="8dp"
            xmlns:app="http://schemas.android.com/apk/res-auto" />
    </LinearLayout>

</LinearLayout>
